
<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            required
            type="Email" 
            name="email" 
            placeholder="Digite seu email"
            value="{{user.email}}"
            onblur="Validate.apply(this, 'isEmail')"
            >
    </div>
</div>
<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            required
            type="password" 
            name="password" 
            placeholder="Senha"
            >
    </div>
</div>
